{
	"search.exclude": {
		".obsidian/**": true,
		".obsidian-workspace": true,
		"**/node_modules/**": true,
		"**/.cache/**": true,
		"**/dist/**": true,
		"**/build/**": true,
		"**/_site/**": true,
		"**/.sanity/**": true,
		"**/temp/**": true,
		"**/cache/**": true,
		"**/models/**": true,
		"**/output/**": true
	},
	"files.watcherExclude": {
		".obsidian/**": true,
		".obsidian-workspace": true,
		"**/node_modules/**": true,
		"**/.cache/**": true,
		"**/dist/**": true,
		"**/build/**": true,
		"**/_site/**": true,
		"**/.sanity/**": true,
		"**/temp/**": true,
		"**/cache/**": true,
		"**/models/**": true,
		"**/output/**": true
	},
	"files.exclude": {
		".obsidian/**": true,
		".obsidian-workspace": true,
		"**/node_modules/**": true,
		"**/.cache/**": true,
		"**/dist/**": true,
		"**/build/**": true,
		"**/_site/**": true,
		"**/.sanity/**": true,
		"**/temp/**": true,
		"**/cache/**": true,
		"**/models/**": true,
		"**/output/**": true
	},
	"workbench.startupEditor": "readme",
	"actionButtons": {
		"commands": [
			{
				"name": "AIX: Pre-PR",
				"singleInstance": true,
				"color": "#2E7D32",
				"command": "cd \"${workspaceFolder}/../aix\" && node scripts/pre-pr-check.mjs"
			},
			{
				"name": "AIX: Refresh Context",
				"singleInstance": true,
				"color": "#1565C0",
				"command": "cd \"${workspaceFolder}/../aix\" && node scripts/context-refresh.mjs"
			},
			{
				"name": "AIX: Drift (Active File)",
				"singleInstance": true,
				"color": "#0D47A1",
				"command": "cd \"${workspaceFolder}/../aix\" && node scripts/drift-file-report.mjs --file \"${file}\"",
				"tooltip": "Plain-language drift readout for the focused editor file plus aggregate drift"
			},
			{
				"name": "AIX: Freshness (CI)",
				"singleInstance": true,
				"color": "#6A1B9A",
				"command": "cd \"${workspaceFolder}/../aix\" && node scripts/context-refresh.mjs --warn-threshold 10 --fail-threshold 10"
			},
			{
				"name": "AIX: Goals (CI)",
				"singleInstance": true,
				"color": "#EF6C00",
				"command": "cd \"${workspaceFolder}/../aix\" && node scripts/current-goals-check.mjs --fail-on-update --maxAgeDays 14"
			},
			{
				"name": "AIX: Update Sidecar (Staged)",
				"singleInstance": true,
				"color": "#455A64",
				"command": "cd \"${workspaceFolder}/../aix\" && node scripts/update-context-freshness.mjs"
			},
			{
				"name": "AIX: Set Drift Baseline",
				"singleInstance": true,
				"color": "#00838F",
				"command": "cd \"${workspaceFolder}/../aix\" && node scripts/update-context-freshness.mjs --set-baseline HEAD --note \"set via Action Button\"",
				"tooltip": "Sets the context drift baseline (accepted snapshot stored in context/drift-baseline.json) so future drift checks compare against this state and keep AIX hygiene stable"
			}
		],
		"defaultColor": "white",
		"reloadButton": "â†»",
		"loadNpmCommands": false
	}
}
